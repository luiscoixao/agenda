<body>
  <h1>Télécommande Philips TV</h1>
  <input type="text" id="tvIp" placeholder="Adresse IP de la TV (ex: 192.168.1.50)" />
  <div class="remote">
    <button onclick="sendCommand('Standby')">⏻ Power</button>
    <button onclick="sendCommand('Mute')">🔇 Mute</button>
    <button onclick="sendCommand('VolumeUp')">🔊 Volume +</button>
    <button onclick="sendCommand('VolumeDown')">🔉 Volume -</button>
    <button onclick="sendCommand('ChannelStepUp')">🔼 Ch. +</button>
    <button onclick="sendCommand('ChannelStepDown')">🔽 Ch. -</button>
    <button onclick="sendCommand('CursorUp')">⬆️ Haut</button>
    <button onclick="sendCommand('CursorDown')">⬇️ Bas</button>
    <button onclick="sendCommand('Confirm')">✔ OK</button>
    <button onclick="sendCommand('Back')">↩ Retour</button>
    <button onclick="sendCommand('Home')">🏠 Accueil</button>
    <button onclick="sendCommand('Menu')">☰ Menu</button>
  </div>

  <script>
    function sendCommand(key) {
      const ip = document.getElementById('tvIp').value;
      if (!ip) {
        alert("Veuillez entrer l'adresse IP de la TV.");
        return;
      }

      fetch(`http://${ip}:1925/1/input/key`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ key })
      })
      .then(() => console.log("Commande envoyée :", key))
      .catch(err => console.error("Erreur :", err));
    }
  </script>
</body>
